<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_0">

	<ImageView android:id="@+id/titleBar"
    	android:layout_width="fill_parent"
        android:layout_height="43dp"
    	android:background="@drawable/title_bar"
    />
    
    <TextView 
    	android:text="EventLocations.us"
    	android:textSize="30sp"
    	android:textStyle="bold" 
    	android:layout_height="wrap_content" 
    	android:id="@+id/textViewTitleMain" 
    	android:layout_width="wrap_content" 
    	android:layout_alignParentTop="true" 
    	android:layout_centerHorizontal="true"/>
    	
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:id="@+id/mainmaster" 
            android:layout_weight="1"
            android:layout_width="300dip"
            android:layout_height="match_parent"
            android:layout_marginTop="43dp">
    	
            
        <ImageView android:id="@+id/info" 
        	android:layout_width="wrap_content"   android:layout_marginLeft="10dip"
        	android:layout_height="wrap_content"  android:layout_marginTop="25dp" 
        	android:src="@drawable/info"> 
        </ImageView>    	
    	
    	<TextView android:id="@+id/textView1" 
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:layout_alignParentTop="true" 
    		android:layout_centerHorizontal="true" 
    		android:layout_marginTop="23dp" 
    		android:text="SEARCH" 
    		android:textColor="#CC3300"
    		android:textSize="30sp" 
    		android:textStyle="bold">
    	</TextView>
    	
    	<TextView android:id="@+id/textView2" 
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:layout_below="@+id/textView1"
       	 	android:layout_centerHorizontal="true" 
        	android:layout_marginTop="20dp" 
        	android:paddingLeft="5dp"
        	android:paddingRight="5dp"
        	android:text="NY / NJ Wedding Halls, Corporate Sites, Bar/Bat Mitzvah, Rehearsal Dinners, Showers &amp; Birthday Parties" 
        	android:textSize="15sp" android:gravity="center_horizontal">
        </TextView>
        
    	<Button android:id="@+id/button1" 
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:layout_below="@+id/textView2" 
    		android:layout_centerHorizontal="true" 
    		android:layout_marginTop="20dp" 
    		android:paddingLeft="5dp"
        	android:paddingRight="5dp"
    		android:background="@drawable/red_button" 
    		android:text="Search by County" 
    		android:textColor="#fff" 
    		android:textSize="20sp"
    		android:onClick="searchByCountyClickHandler">
    	</Button>
    	
    	<Button android:id="@+id/button2" 
    		android:background="@drawable/red_button" 
    		android:text="Search by Site Name" 
    		android:layout_width="wrap_content" 
    		android:layout_centerHorizontal="true" 
    		android:textColor="#fff" 
    		android:layout_height="wrap_content" 
    		android:textSize="20sp" 
    		android:paddingLeft="5dp"
        	android:paddingRight="5dp"
    		android:layout_below="@+id/button1" 
    		android:layout_marginTop="20dp"
    		android:onClick="searchBySiteNameClickHandler">
    	</Button>
    	
    <View android:id="@+id/divider" 
    	android:layout_width="270dp"
    	android:layout_height="2dp" 
    	android:layout_below="@id/button2"
    	android:background="#000"
    	android:layout_centerHorizontal="true" 
    	android:layout_marginTop="30dp"/>
    	
    <Button android:id="@+id/button3" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_below="@id/divider" 
    	android:text="Search Services" 
    	android:layout_centerHorizontal="true" 
    	android:textColor="#CC3300"
    	android:textSize="30sp" 
    	android:layout_marginTop="10dp" 
    	android:textStyle="bold"
    	android:background="@android:color/transparent"
    	android:onClick="searchByServicesClickHandler">
    </Button>
    
     <Button android:id="@+id/button4" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_below="@id/button3" 
    	android:text="Search Caterers" 
    	android:layout_centerHorizontal="true" 
    	android:textSize="30sp" 
    	android:layout_marginTop="10dp" 
    	android:textStyle="bold"
    	android:textColor="#CC3300"
    	android:background="@android:color/transparent"
    	android:onClick="searchByCaterersClickHandler">
    </Button>	
    	
     <View android:id="@+id/divider2" 
    	android:layout_width="270dp"
    	android:layout_height="2dp" 
    	android:layout_below="@id/button4"
    	android:background="#000"
    	android:layout_centerHorizontal="true" 
    	android:layout_marginTop="10dp"/>
    	
     <Button android:id="@+id/button5" 
     	android:text="Find A Bridal Show" 
     	android:layout_width="wrap_content" 
     	android:layout_height="wrap_content" 
     	android:layout_below="@id/divider2" 
     	android:layout_centerHorizontal="true" 
     	android:textSize="25sp" 
     	android:textStyle="bold"
     	android:textColor="#6699FF"
    	android:background="@android:color/transparent"
     	android:layout_marginTop="20dp"
     	android:onClick="findABridalShowClickHandler">
     	
     </Button>
     	
     <Button android:id="@+id/button6" 
     	android:text="Honeymoon &amp; Wedding Win A Honeymoon" 
     	android:layout_width="wrap_content" 
     	android:layout_height="wrap_content" 
     	android:layout_below="@id/button5" 
     	android:layout_centerHorizontal="true" 
     	android:layout_marginTop="10dp"
     	android:textSize="25sp" 
     	android:textStyle="bold"
     	android:textColor="#FF6699"
    	android:background="@android:color/transparent"
    	android:onClick="winAHoneymoonClickHandler">
    	</Button>
    	
    </RelativeLayout>
     
    <View android:id="@+id/divider" 
    android:layout_width="5dip"
    android:layout_height="fill_parent" 
    android:layout_toRightOf="@id/mainmaster"
    android:layout_marginTop="43dp"
    android:background="#ccc"/>
    
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:id="@+id/maindetails" 
    		android:layout_weight="1"
    		android:layout_toRightOf="@id/divider"
            android:layout_width="975dip"
            android:layout_height="fill_parent"
            android:layout_marginTop="43dp">
            

			    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:background="@drawable/background_0">
			
			    	 
				        <RelativeLayout
				     	android:id="@+id/header"
						android:layout_width="fill_parent"
						android:layout_marginTop="0dip"
						android:layout_height="wrap_content"  
						android:layout_marginLeft="0dip"
						android:layout_weight="0"
						android:orientation="horizontal"
						android:background="@drawable/blackbar_blue"
						>	    
					
						    <TextView 
						    	android:text="@string/title_aboutus"
						     	android:textSize="25sp" 
						     	android:textStyle="bold"
						     	android:textColor="#FFFFFF"
						    	android:layout_height="wrap_content" 
						    	android:id="@+id/textViewTitleMain" 
						    	android:layout_width="wrap_content" 
						    	android:layout_alignParentTop="true" 
						    	android:layout_centerVertical="true"
						    	android:layout_centerHorizontal="true"/>
					   	</RelativeLayout> 
			
			
			    	
			    <RelativeLayout 
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent"
			            android:layout_marginTop="43dp">
			    	
			
			    	<TextView android:id="@+id/title_eventslocations" 
			    		android:layout_width="fill_parent" 
			    		android:layout_height="wrap_content" 
			    		android:layout_below="@+id/textViewTitleMain"
			    		android:text="@string/title_aboutus_events_locations" 
			    		android:textStyle="bold"
			       	 	android:layout_centerHorizontal="true" 
			        	android:layout_marginTop="20dp" 
			        	android:paddingLeft="5dp"
			        	android:paddingRight="5dp"
			        	android:textSize="20sp" android:gravity="center_horizontal">
			        </TextView>
			        
			        <TextView android:id="@+id/body1" 
			    		android:layout_width="fill_parent" 
			    		android:layout_height="wrap_content" 
			    		android:layout_below="@+id/title_eventslocations"
			        	android:layout_marginTop="20dp" android:lineSpacingMultiplier="1"
			        	android:layout_marginLeft="50dip"
			        	android:layout_marginRight="50dip"
			        	android:textSize="18sp" >
			        </TextView>
			        
			        
			    <View android:id="@+id/divider" 
			    	android:layout_width="fill_parent"
			    	android:layout_height="2dp" 
			    	android:layout_below="@id/body1"
			    	android:layout_marginLeft="50dip"
			    	android:layout_marginRight="50dip"
			    	android:background="#000"
			    	android:layout_centerHorizontal="true" 
			    	android:layout_marginTop="30dp"/>
			
			
			    	<TextView android:id="@+id/title_additionalInformation" 
			    		android:layout_width="fill_parent" 
			    		android:layout_height="wrap_content" 
			    		android:layout_below="@+id/divider"
			    		android:textStyle="bold"
			       	 	android:layout_centerHorizontal="true" 
			        	android:layout_marginTop="20dp" 
			        	android:text="@string/title_aboutus_aditional_information" 
			        	android:textSize="20sp" android:gravity="center_horizontal">
			        </TextView>
			
			<!-- android:text="@string/title_about_body2" -->
			        <TextView android:id="@+id/body2" 
			    		android:layout_width="fill_parent" 
			    		android:layout_height="wrap_content" 
			    		android:layout_below="@+id/title_additionalInformation"
			        	android:layout_marginTop="20dp" android:lineSpacingMultiplier="1"
			        	android:layout_marginLeft="50dip"
			        	android:layout_marginRight="50dip"
			        	android:textSize="18sp" >
			        </TextView>
			    	
			     <Button android:id="@+id/contactUs" 
			     	android:text="@string/title_aboutus_contact_us" 
			     	android:layout_width="wrap_content" 
			     	android:layout_height="wrap_content" 
			     	android:layout_below="@id/body2" 
			     	android:textSize="20sp" android:layout_marginLeft="50dip"
			     	android:textStyle="bold" 
			     	android:textColor="@color/black"
			     	android:paddingLeft="15dp"
			        android:paddingRight="15dp"
			        android:paddingTop="2dp"
			        android:paddingBottom="2dp"
			    	android:background="@drawable/xml_white"
			     	android:layout_marginTop="30dp"
			     	>
			     	
			     </Button>
			     	
			    <TextView  
			    	android:layout_width="wrap_content" 
			    	android:layout_height="wrap_content" 
			    	android:layout_below="@id/body2" 
			        android:layout_marginTop="30dp" 
			        android:layout_alignParentRight="true"
			        android:layout_marginRight="20dip"
			        android:paddingRight="30dp"
			        android:text="@string/title_version_1" 
			        android:textSize="20sp">
			     </TextView>
			    	
			    </RelativeLayout>
			
			        
			            
			</RelativeLayout>
			        
			            
			    </RelativeLayout>
    
    
            
</RelativeLayout>
