<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	android:id="@+id/LinearLayout01" 
	android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="1dip"
    android:paddingBottom="1dip"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    

    <!-- android:clickable="true" android:background="@drawable/button_bar"-->
    <LinearLayout android:layout_marginTop="5dip" 
    	android:id="@+id/LinearLayout01"  
    	android:layout_width="fill_parent" android:orientation="horizontal"
		android:layout_height="wrap_content">
		    <TextView 
		    	android:id="@+id/tv_date"
		    	android:layout_width="250dip"
		    	android:width="250dip" 
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dip"
		        android:layout_marginTop="1dip"
		        android:textColor="#000000"
		        android:textSize="16dip"
		        android:gravity="left" 
		        android:textStyle="bold"
		        android:singleLine="true"/>
		    
			<TextView  	android:id="@+id/textViewAddress" 
			    	android:layout_width="wrap_content" 
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="10dip"
			        android:textColor="#000000"
			        android:textSize="16dip"
			        android:layout_weight="1"
			        android:paddingRight="0dip"
			        android:singleLine="true"/>		    
		    
		     
		  <Button  android:paddingLeft="25dip" android:paddingRight="25dip"
			        android:layout_width="wrap_content" android:id="@+id/b_map" android:paddingTop="4dip" android:paddingBottom="4dip"
				    android:layout_height="wrap_content" android:layout_marginLeft="240dp"
				    android:text="@string/button_map" 
				    android:background="@drawable/xml_blue_button"
				    android:textColor="@color/white" android:textStyle="bold"
		  />		
				    
		 <Button  android:paddingLeft="25dip" 
					    android:layout_width="40dip" android:id="@+id/b_shared2" 
					    android:layout_height="40dip" android:layout_marginLeft="20dp"
					    android:background="@drawable/shared"
		  />    
    				 		
    </LinearLayout>   

    <LinearLayout android:layout_marginTop="1dip" 
    	android:id="@+id/LinearLayout02"  
    	android:layout_width="fill_parent" android:orientation="horizontal"
		android:layout_height="wrap_content">


				   <TextView 
				    	android:layout_width="50dip" 
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="10dip"
				        android:textColor="#000000"
				        android:text="Cost:"
				        android:textSize="16dip"
				        android:textStyle="bold"
				        android:width="50dip"
				        android:gravity="left" 
				        android:singleLine="true"/>

				    <TextView 
				    	android:layout_width="80dip" 
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="3dip"
				        android:textColor="#000000"
				        android:text="Free"
				        android:width="80dip"
				        android:textSize="16dip"
				        android:singleLine="true"/>
				    				    
			    <TextView 
			    	android:id="@+id/tv_address2"
			    	android:layout_width="wrap_content" 
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="125dip"
			        android:textColor="#000000"
			        android:textSize="16dip"
			        android:singleLine="true"/>
    </LinearLayout>  
    
        
    <ImageView
	android:id="@+id/image_view"
	android:layout_width="fill_parent"   
	android:layout_marginTop="5dip"
	android:layout_height="wrap_content"
	android:layout_marginLeft="0dip" 
	android:layout_marginRight="0dip"
	android:src="@drawable/xml_selectedlist"
	/>
    
</LinearLayout>

